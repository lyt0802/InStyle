extends layout

block title
    | Following

block content
    h1 Following Page
    //-h1= user

    for following in user.following
        //-todolater: list out followers as links to their profile
        img(src='#{following.profilePicture.url}', height=200,width=200, class='img-circle', id='profilePicture')
        a(href='/profile/' + following._id)
            h4= following.firstName + ' ' + following.lastName
        br
